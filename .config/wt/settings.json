{
    "$help": "https://aka.ms/terminal-documentation",
    "$schema": "https://aka.ms/terminal-profiles-schema",

    "defaultProfile": "{51855cb2-8cce-5362-8f54-464b92b32386}",
    "disabledProfileSources": ["Windows.Terminal.Azure"],

    "copyOnSelect": true,
    "tabSwitcherMode": "mru",

    "useAcrylicInTabRow": true,
    "disableAnimations": true,

    "actions":
    [
        {
            "command": "toggleFocusMode",
            "keys": "f10"
        },
        {
            "command": { "action": "moveFocus", "direction": "left" },
            "keys": "alt+h"
        },
        {
            "command": { "action": "moveFocus", "direction": "down" },
            "keys": "alt+j"
        },
        {
            "command": { "action": "moveFocus", "direction": "up" },
            "keys": "alt+k"
        },
        {
            "command": { "action": "moveFocus", "direction": "right" },
            "keys": "alt+l"
        },
        {
            "command": { "action": "splitPane", "split": "horizontal", "splitMode": "duplicate" },
            "keys": "alt+shift+j"
        },
        {
            "command": { "action": "splitPane", "split": "vertical", "splitMode": "duplicate" },
            "keys": "alt+shift+l"
        }
    ],

    "profiles":
    {
        "defaults":
        {
            "font": {
                "face": "Fira Code",
                "size": 11
            },
            "scrollbarState": "hidden",
            "antialiasingMode": "cleartype",
            "closeOnExit": "always"
        },
